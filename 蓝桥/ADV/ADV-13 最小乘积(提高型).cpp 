#include <iostream>
#include <algorithm>
#include <vector>
using namespace std;
int main() {
    int k, n;
    scanf("%d", &k);
    for (int i = 0; i < k; i++) {
        int ans = 0;
        scanf("%d", &n);
        vector<int> v1(n), v2(n);
        for (int i = 0; i < n; i++)
            scanf("%d", &v1[i]);
        for (int i = 0; i < n; i++)
            scanf("%d", &v2[i]);
        sort(v1.begin(), v1.end(), less<int>());
        sort(v2.begin(), v2.end(), greater<int>());
        for (int i = 0; i < n; i++) 
             ans += v1[i] * v2[i];
        printf("%d\n", ans);
    }
    return 0;
}
